{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "dist",
        "sourceMap": false,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "tslib": ["/node_modules/tslib/tslib.d.ts"]
        },
        "lib": ["es2018", "dom"]
    },
    "include": ["src/server/**/*.ts", "src/index.ts"],
    "exclude": ["node_modules"]
}
